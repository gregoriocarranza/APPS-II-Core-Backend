{
  "name": "core-backend",
  "version": "1.0.0",
  "description": "backend project generated by Paul Sundays",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest",
    "start": "node dist/server.js",
    "build": "tsc",
    "start:dev": "nodemon src/server.ts",
    "format": "prettier --write .",
    "build:asyncapi": "asyncapi generate fromTemplate .docs/async-documentation.yaml @asyncapi/html-template@3.0.0 --use-new-generator -o .docs/.build/async --force-write -p singleFile=true sidebarOrganization=byTagsNoRoot",
    "migrate:create": "knex migrate:make migration -x ts",
    "migrate:deploy": "knex migrate:latest",
    "migrate:rollback:all": "knex migrate:rollback --all",
    "pm2:restart": "pm2 reload core-backend --update-env || pm2 start dist/server.js --name core-backend --update-env"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@asyncapi/cli": "^3.5.2",
    "@asyncapi/generator": "^2.8.3",
    "@asyncapi/html-template": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@sundaysf/cli": "^0.2.9",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.16",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.13.13",
    "@types/nodemailer": "^7.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^8.33.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.28.0"
  },
  "author": "",
  "license": "MIT"
}
